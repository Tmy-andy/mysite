<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Details</title>
  
  <style>
    /* General Styling for Product Show Page */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #e3f2fd; /* Pastel xanh dương nhạt */
    }

    .product-container {
      display: flex;
      max-width: 800px;
      margin: 40px auto;
      background-color: #ffffff;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }

    .product-image {
      flex: 1;
      text-align: center;
    }

    .product-image img {
      max-width: 100%;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-details {
      flex: 2;
      padding-left: 20px;
    }

    .product-name {
      font-size: 24px;
      font-weight: bold;
      color: #64b5f6; /* Pastel xanh dương */
    }

    .product-description {
      margin-top: 10px;
      font-size: 16px;
      color: #555;
      line-height: 1.6;
    }

    .product-inventory {
      margin-top: 20px;
      font-size: 14px;
      color: #333;
    }

    .action-buttons {
      margin-top: 20px;
      display: flex;
      gap: 10px;
    }

    .button {
      text-decoration: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      text-align: center;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .button-back {
      background-color: #bbdefb; /* Pastel xanh dương nhạt */
      color: #1e88e5;
    }

    .button-edit {
      background-color: #64b5f6; /* Pastel xanh dương */
      color: #fff;
    }

    .button-delete {
      background-color: #e57373; /* Đỏ nhạt */
      color: #fff;
    }

    .button:hover {
      opacity: 0.9;
    }
  </style>
</head>
<body>
  <section class="product-container">
    <!-- Featured Image -->
    <div class="product-image">
      <!-- Hiển thị hình ảnh sản phẩm -->
      <img src="<%= @product.featured_image.attached? ? url_for(@product.featured_image.variant(resize_to_fill: [300, 300])) : '' %>" 
           alt="<%= @product.name %>" />
    </div>

    <!-- Product Information -->
    <div class="product-details">
      <!-- Tên sản phẩm -->
      <h1 class="product-name"><%= @product.name %></h1>

      <!-- Mô tả sản phẩm -->
      <p class="product-description"><%= @product.description %></p>

      <!-- Kho hàng -->
      <div class="product-inventory">
        <%= render "inventory", product: @product %>
      </div>

      <!-- Nút hành động -->
      <div class="action-buttons">
        <a href="<%= products_path %>" class="button button-back">Back to Products</a>
        <% if authenticated? %>
          <a href="<%= edit_product_path(@product) %>" class="button button-edit">Edit Product</a>
          <%= button_to "Delete Product", @product, method: :delete, class: "button button-delete", data: { turbo_confirm: "Are you sure you want to delete this product?" } %>
        <% end %>
      </div>
    </div>
  </section>
</body>
</html>
