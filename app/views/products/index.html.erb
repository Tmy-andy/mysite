<h1>Products</h1>

<div id="products">
  <% if @products.present? %>  <!-- Kiểm tra @products có dữ liệu không -->
    <% @products.each do |product| %>
      <div>
        <%= product.name %>
      </div>
    <% end %>
  <% else %>
    <p>No products available.</p>  <!-- Thông báo nếu không có sản phẩm -->
  <% end %>
</div>
